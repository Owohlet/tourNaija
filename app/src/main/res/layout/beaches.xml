<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beaches"
                android:textSize="25sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/coconut"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivCoconut"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coconut Beach"
                        android:layout_gravity="center"
                        android:id="@+id/obudu"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/whisperingpalms"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivWhisper"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whispering Palms"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/tvOC"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/elegushi"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivLacampaigne"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La  Tropicana"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/tvCRNP"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/oniru"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivOniru"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oniru beach"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/tvOR"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/elegushi"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivElegushi"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elegushi Beach"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/tvTLR"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:background="@drawable/coconut"
                        android:layout_height="150dp"
                        android:layout_width="150dp"
                        android:id="@+id/ivTakwabay"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TakwaBay Beach"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/tvYGR"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
